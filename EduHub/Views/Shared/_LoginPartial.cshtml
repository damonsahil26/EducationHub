@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link " id=privacy asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-success">Logout</button>
        </form>
    </li>
}
else
{
    <div class="text-end">
        <a class="btn btn-light" asp-area="identity" asp-page="/account/register">Register</a>
        <a class="btn btn-success" asp-area="identity" asp-page="/account/login">Login</a>
    </div>
}

